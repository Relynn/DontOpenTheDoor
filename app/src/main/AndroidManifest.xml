<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.calbaptist.android.dontopenthedoorgame">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".HomeScreenMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".DifficultyActivity">
        </activity>
        <activity android:name=".ThemesActivity"
                  android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ShareActivity">
        </activity>
        <activity android:name=".Leaderboard">
        </activity>
        <activity android:name=".LeaderBoardActivity">
        </activity>
        <activity android:name=".PlayHard">
        </activity>
        <activity android:name=".PlayEasy">
        </activity>
        <activity android:name=".PlayMedium">
        </activity>

    </application>

</manifest>